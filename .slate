# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.4
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config keyboardLayout dvorak
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
#config windowHintsDuration 5
config windowHintsSpread true
#config windowHintsOrder persist
config layoutFocusOnActivate true
 
# Monitor Aliases
alias mon-laptop      0
alias mon-samsung    1
 
# Misc Aliases
alias showHintsLeftHand hint AOEUIYQJKX
alias showNormalHint hint AOEUIDHTNSYXFBPKGMCW
alias browser 'Google Chrome'
alias editor 'MacVim'
 
alias hyper ctrl;alt;cmd

# Abstract positions
alias full          move screenOriginX;screenOriginY                  screenSizeX;screenSizeY
alias lefthalf      move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY
alias rightmost     move screenOriginX+screenSizeX*0.4;screenOriginY  screenSizeX*0.6;screenSizeY
alias rightless     move screenOriginX+screenSizeX*0.6;screenOriginY  screenSizeX*0.4;screenSizeY
alias leftmost      move screenOriginX;screenOriginY                  screenSizeX*0.6;screenSizeY
alias leftless      move screenOriginX;screenOriginY                  screenSizeX*0.4;screenSizeY
# Concrete positions
alias 1-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY         ${mon-laptop}
alias 1-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY         ${mon-laptop}
alias 1-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-laptop}
alias 2-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY         ${mon-samsung}
alias 2-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-samsung}
alias 2-righttop    move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY/2       ${mon-samsung}
alias 2-rightbottom move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2    screenSizeX/2;screenSizeY/2       ${mon-samsung}

# Location bindings
bind h:${hyper} ${lefthalf}
bind n:${hyper} ${full}
bind s:${hyper} ${righthalf}
#bind r:${hyper} throw next

# Focus Bindings
bind r:${hyper} focus left
bind l:${hyper} focus right
bind k:${hyper} focus above
bind j:${hyper} focus below
bind w:${hyper} focus behind

bind c:${hyper} hide current

# Application Specific
#bind a:${hyper} focus 'Adium'
#bind o:${hyper} focus 'Google Chrome'
#bind e:${hyper} focus 'iTerm'
#bind u:${hyper} focus 'Eclipse'
#bind i:${hyper} focus 'Spotify'

# Layouts
layout 1monitorChrome 'Google Chrome': ${full}
layout 1monitorIterm 'iTerm': ${full}
layout 1monitorEclipse 'Eclipse': ${full}

layout 1monitorHacking 'Google Chrome': ${lefthalf}
layout 1monitorHacking 'iTerm': ${righthalf}

layout 1monitorChat 'Google Chrome': ${lefthalf}
layout 1monitorChat 'Adium': ${righthalf}

layout 1monitorMusic 'Google Chrome': ${lefthalf}
layout 1monitorMusic 'Spotify': ${righthalf}

bind a:${hyper} layout 1monitorChrome
bind o:${hyper} layout 1monitorIterm
bind e:${hyper} layout 1monitorEclipse

bind ':${hyper} layout 1monitorHacking
bind ,:${hyper} layout 1monitorChat
bind .:${hyper} layout 1monitorMusic
